                <TableColumn fx:id="aptDescription" prefWidth="115.0" text="Description" />
            <TableColumn fx:id="aptLocation" prefWidth="114.0" text="Location" />
            <TableColumn fx:id="aptType" prefWidth="134.0" text="Type" />
